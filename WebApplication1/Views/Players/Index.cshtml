@model IEnumerable<Player>

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Players List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Players" class="btn btn-info form-control text-white">
            Add New Player
        </a>
    </div>
    <div class="col-12 border p-3">
        <table class="table table-striped table-bordered" style="width:100%">
            @if (Model.Count() > 0)
            {
                <thead>
                    <tr class="text-center">
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Gender</th>
                        <th>Birth</th>
                        <th>Team</th>
                        <th>Country</th>
                        <th>Options</th>
                    </tr>
                </thead>
                @await Html.PartialAsync("_GetPlayer", Model)
            }
            else
            {
                <tr>No players available.</tr>
            }
        </table>
    </div>
</div>
