@model IEnumerable<Player>

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Players List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Players" class="btn btn-info form-control text-white">
            Add New Player
        </a>
    </div>
    <div class="col-12 border p-3">
        <table class="table table-striped table-bordered" style="width:100%">
            @if (Model.Count() > 0)
            {
                <thead>
                    <tr class="text-center">
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Gender</th>
                        <th>Birth</th>
                        <th>Team</th>
                        <th>Country</th>
                        <th>Options</th>
                    </tr>
                </thead>
                @foreach (Player p in Model)
                {
                    <tr class="text-center">
                        <td>@p.Name</td>
                        <td>@p.Surname</td>
                        <td>@p.Gender</td>
                        <td>@p.Birth</td>
                        <td>@p.Team?.Name</td>
                        <td>@p.Country</td>
                        <td>
                            <a asp-action="Upsert" asp-route-id="@p.Id" asp-controller="Players" class="btn btn-outline-dark form-control">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>No players available.</tr>
            }
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}
